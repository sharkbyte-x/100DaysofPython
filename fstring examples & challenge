#challenge
i = 1
import os, time
print("Course Feedback Loop - What did you think?\n")
time.sleep(1)
for i in range(1, 4):
    reply = input(f"Day {i}:\n")
    print()
    output = (f"You thought Day {i} was '{reply}'\n")
    print (f"{output:^50}")
    time.sleep(1.5)
